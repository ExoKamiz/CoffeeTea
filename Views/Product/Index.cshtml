@model CoffeeTea.Models.ViewModels.ProductVM

<head>
    <link rel="stylesheet" href="~/css/categories.css" asp-append-version="true" />
</head>
<div class="container">
    <div class="text-center">
        <button class="button-18" style="margin-right: 30px; --s: .70em;  --b: 4px; font-size: 20px;" data-filter="all">All</button>
        @foreach (var obj in Model.Categories)
        {
            <button class="button-18" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var prod in Model.Products)
        {
            <partial name="_IndividualProductCard" model="prod" />      
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $(".button-89").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}